@model IEnumerable<PolyclinicProject.Врачи>

@{
    ViewBag.Title = "Index";
}

<h2>Список врачей</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Логин)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Фио)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Пароль)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Специалист)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.График_работы)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Участок)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Логин)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Фио)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Пароль)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Специалист)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.График_работы)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Участок)
        </td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id = item.Номер_записи }) |
        </td>
            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
            {
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Номер_записи }) |
  
                @Html.ActionLink("Удалить", "Delete", new { id = item.Номер_записи })
            </td>
        }
        </tr>
}

</table>